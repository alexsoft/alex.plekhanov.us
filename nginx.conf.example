server {
	listen 80;
	server_name plekhanov.us;
	return 302 $scheme://alex.plekhanov.us;
}

server {
	listen 80;
	server_name *.alex.plekhanov.us;
	return 302 $scheme://alex.plekhanov.us$request_uri;
}

server {
	listen 80;
	server_name alex.plekhanov.us;
	root "/home/asft/Code/alex.plekhanov.us.laravel/public";

	index index.php;

	charset utf-8;

	location / {
		try_files $uri /index.php?$query_string;
	}

	location = /favicon.ico { access_log off; log_not_found off; }
	location = /robots.txt  { access_log off; log_not_found off; }

	access_log off;
	error_log /home/asft/Code/alex.plekhanov.us.laravel/storage/logs/error.log error;

	if (!-d $request_filename) {
		rewrite ^/(.*)/$ /$1 permanent;
	}

	location ~ \.php$ {
		fastcgi_split_path_info ^(.+\.php)(/.+)$;
		fastcgi_pass unix:/tmp/php-fpm.sock;
		fastcgi_index index.php;
		include fastcgi_params;
		fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
		fastcgi_intercept_errors off;
		fastcgi_buffer_size 16k;
		fastcgi_buffers 4 16k;
	}

	location ~* .(css|js|ico|png|jpg)$ {
		expires modified +365d;
	}
	location ~ /\.[ht|git] {
		deny all;
	}

}